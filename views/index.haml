.section
  %img.homepage-image.absolute(src="https://unsplash.imgix.net/photo-1417962798089-0c93ceaed88a?q=75&fm=jpg&s=2da8b1d69ce267ad866bf4d6477d1ae7")
.section
  .row.push-down
    .small-12.columns.homepage-title
      %h1.centered.white
        .thick-title
          TryPaper.com Document Uploader
        .thin-title
          Mail PDF Files to Physical Addresses
      %hr.white
      .small-10.small-centered.column
        %ul.no-bullet.white
          %li
            1. Sign up for a free account at
            %a.orange{:href => "http://trypaper.com", :target => "_blank"}TryPaper.com
            (credit card required to start printing)
          %li 2. Create "Return Address ID" inside your TryPaper account
          %li 3. Copy and paste "Production API Key" and "Return Address ID" from TryPaper account into boxes below
          %li 4. Enter recipient info, choose printing options, upload document and click "Print"
          %li 5. Confirmation message will display success message or notify you of any errors
      .small-10.small-centered.columns
        %form.custom{:action => "/", :enctype => "multipart/form-data", :method => "POST"}
          %fieldset
            %legend TryPaper.com Document Uploader
            .small-12.large-6.columns
              %label.white TryPaper API Key
              %input.radius{:placeholder => "EXAMPLE5555API42342KEY", :type => "text", :name => "api_key"}
            .small-12.large-6.columns
              %label.white TryPaper Return Address ID
              %input.radius{:placeholder => "555_main_street_HQ", :type => "text", :name => "return_address_id"}
            %hr.white
            .small-12.columns
              %label.white Recipient Name
              %input.radius{:placeholder => "Johnny Appleseed", :type => "text", :name => "name"}
            .small-12.large-6.columns
              %label.white Address
              %input.radius{:placeholder => "555 Pumpkin Lane", :type => "text", :name => "address1"}
            .small-12.large-6.columns
              %label.white Address Cont'd (Optional)
              %input.radius{:placeholder => "Apt 1", :type => "text", :name => "address2"}
            .small-12.large-5.columns
              %label.white City
              %input.radius{:placeholder => "Veggieville", :type => "text", :name => "city"}
            .small-6.large-4.columns
              %label.white State
              %input.radius{:placeholder => "WI (2-Letter Abbreviation)", :maxlength => 2, :type => "text", :name => "state"}
            .small-6.large-3.columns
              %label.white Zipcode
              %input.radius{:placeholder => "55555", :type => "text", :maxlength => 5, :name => "zipcode"}
            %hr.white
            .small-12.large-6.column
              %label.white.has-tip{:title => "Single: Print Document Once <br> Duplicate: Print Document Twice <br> Triplicate: Print Three Times", data:{tooltip:'', html:true}, aria:{haspopup:"true"} }Print Quantity
              %input{:type => "radio", :name => "quantity", :value =>"Single", :id => "quantitySingle", :checked => ''}
              %label.white{:for => "quantitySingle"} Single
              %input{:type => "radio", :name => "quantity", :value =>"duplicate_contents", :id => "quantityDuplicate"}
              %label.white{:for => "quantityDuplicate"} Duplicate
              %input{:type => "radio", :name => "quantity", :value =>"triplicate_contents", :id => "quantityTriplicate"}
              %label.white{:for => "quantityTriplicate"} Triplicate
            .small-12.large-6.column
              %label.white.has-tip{:title => "Duplex: Front & Back Printing <br> B & W: Print Color Document in B&W", data:{tooltip:'', html:true}, aria:{haspopup:"true"} } Optional Printing Tags
              %input{:name => 'optional_tags[]', :id => "duplex", :value => "duplex", :type => "checkbox" }
              %label.white{:for => "duplex"} Duplex
              %input{:name => 'optional_tags[]', :id => "blackwhite", :value => "force_bw", :type => "checkbox" }
              %label.white{:for => "blackwhite"} Black & White
            %hr.white
            .small-12.large-7.columns
              %label.white Upload File
              %input.radius{:placeholder => "sales_invoice_2015.pdf", :type => "file", :name => "uploaded_file", :accept => "application/pdf", :value => nil}
            .small-12.large-5.columns.centered
              %input.button.radius.orange-button.push-down-button{:type => "submit", :value => "Print & Mail Document"}
            .small-12.column.centered
              - if locals[:api_reply]
                .alert-box.info.radius{data:{alert:''}}
                  = locals[:api_reply]
                  %a.close{:href => "#"} x
              - if locals[:bad_reply]
                .alert-box.alert.radius{data:{alert:''}}
                  = locals[:bad_reply]
                  %a.close{:href => "#"} x
      %hr.white
        %p.white.centered
          Powered by
          %a.orange{:href => "http://trypaper.com", :target => "_blank" } TryPaper.com
          |
          Built by
          %a.orange{:href => "http://patrickjones.me", :target => "_blank", :title => "Patrick Jones Ruby on Rails Developer" } Patrick Jones
          \|
          Credit to
          %a.orange{:href => "http://unsplash.com", :target => "_blank" } UnSplash
          for the Amazing Background Picture!
