      %meta{:name => 'description', :content => "The TryPaper PDF Mailing App is for sending PDF files via USPS snail mail."}
    %link{:href => "css/foundation.css", :rel => 'stylesheet' }
    %link{:href => "css/app.css", :rel => 'stylesheet' }
    %script{:src => "js/vendor/modernizr.js" }
    %link{:href => 'https://fonts.googleapis.com/css?family=Raleway:400,200,700', :rel=> 'stylesheet', :type => 'text/css' }
